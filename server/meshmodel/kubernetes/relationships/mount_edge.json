{
    "apiVersion": "core.meshery.io/v1alpha1",
    "kind": "Edge",
    "metadata": {
      "description": "A relationship that represents volume mounts between components"
    },
    "model": {
      "name": "kubernetes",
      "version": "v1.25.2",
      "displayName": "Kubernetes",
      "category": {
        "name": "Orchestration \u0026 Management",
        "metadata": null
      },
      "metadata": {}
    },
    "subType": "Mount",
    "selectors": {
      "deny": {
        "from": [
          {
            "kind": "Pod",
            "model": "kubernetes"
          },
          {
            "kind": "ClusterRole",
            "model": "kubernetes"
          },
          {
            "kind": "Role",
            "model": "kubernetes"
          },
          {
            "kind": "ServiceAccount",
            "model": "kubernetes"
          }
        ],
        "to": [
          {
            "kind": "Pod",
            "model": "kubernetes"
          },
          {
            "kind": "ClusterRole",
            "model": "kubernetes"
          },
          {
            "kind": "Role",
            "model": "kubernetes"
          },
          {
            "kind": "ServiceAccount",
            "model": "kubernetes"
          }
        ]
      },
      "allow":{
        "from": [
          {
            "kind": "Pod",
            "model": "kubernetes",
            "match": {
              "self": [
                [ "settings", "spec", "volumes", "_", "persistentVolumeClaim", "claimName" ]
              ],
              "PersistentVolumeClaim": [
                ["name"]
              ]
            }
          },
          {
            "kind": "ClusterRole",
            "model": "kubernetes",
            "match": {
              "self": [
                [
                  "type"
                ],
                [
                  "name"
                ]
              ],
              "ClusterRoleBinding": [
                [
                  "settings",
                  "roleRef",
                  "kind"
                ],
                [
                  "settings",
                  "roleRef",
                  "name"
                ]
              ]
            }
          },
          {
            "kind": "Role",
            "model": "kubernetes",
            "match": {
              "self": [
                [
                  "type"
                ],
                [
                  "name"
                ]
              ],
              "ClusterRoleBinding": [
                [
                  "settings",
                  "roleRef",
                  "kind"
                ],
                [
                  "settings",
                  "roleRef",
                  "name"
                ]
              ]
            }
          }
        ],
        "to": [
          { "kind": "PersistentVolume",
            "model": "kubernetes",
            "match": {
              "self": [
                ["labels"]
              ],
              "PersistentVolumeClaim": [
                ["settings", "spec", "selectors", "matchLabels"]
              ]
            }
          },
          {
            "kind": "ServiceAccount",
            "model": "kubernetes",
            "match": {
              "self": [
                [
                  "name"
                ]
              ],
              "ClusterRoleBinding": [
                [
                  "settings",
                  "subjects",
                  "_",
                  "name"
                ]
              ]
            }
          }
        ]
      }
    }
  }